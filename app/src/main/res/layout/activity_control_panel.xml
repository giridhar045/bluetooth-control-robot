<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RobotControlActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2191"
        android:id="@+id/n"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/s"
        android:layout_alignStart="@+id/s"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2193"
        android:id="@+id/s"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2192"
        android:id="@+id/e"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2190"
        android:id="@+id/w"
        android:layout_alignTop="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2196"
        android:id="@+id/nw"
        android:layout_below="@+id/n"
        android:layout_alignLeft="@+id/sw"
        android:layout_alignStart="@+id/sw"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2197"
        android:id="@+id/ne"
        android:layout_below="@+id/n"
        android:layout_toLeftOf="@+id/e"
        android:layout_toStartOf="@+id/e"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2199"
        android:id="@+id/sw"
        android:layout_above="@+id/s"
        android:layout_toRightOf="@+id/w"
        android:layout_toEndOf="@+id/w"
        android:textSize="50px"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2198"
        android:id="@+id/se"
        android:layout_alignTop="@+id/sw"
        android:layout_toLeftOf="@+id/e"
        android:layout_toStartOf="@+id/e"
        android:textSize="50px"
        android:textStyle="bold" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:id="@+id/rec"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:textOff="\u25EF"
        android:textOn="\u25CF"
        android:background="@color/colorRec"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\uD83D\uDCA1"
        android:textSize="50px"
        android:id="@+id/lights"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorLights" />

</RelativeLayout>
